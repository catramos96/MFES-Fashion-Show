class TestDate

 operations
 
 private expecting(p1: Date`DatePosition, p2: Date`DatePosition) == return
 pre p1 = p2;
 
 private expecting(b1: bool, b2: bool) == return
 pre b1 = b2;

 private testDatePosition() ==
 (
 -- d1-d2 include d2-d4 fully
	 dcl d1: Date := new Date(1997,02,14,20,55);
 	 dcl d2: Date := new Date(1997,02,14,21,55);
 	 
 	 dcl p1: Date`DatePosition, p2: Date`DatePosition, p3: Date`DatePosition;
 	 -- Position
 	 p1 := Date`getDatePosition(d1,d2,<Year>);
 	 p2 := Date`getDatePosition(d2,d1,<Year>);
 	 p3 := Date`getDatePosition(d1,d1,<Year>);
 	 
 	 expecting(p1,<Before>);
 	 expecting(p2,<After>);
 	 expecting(p3,<Same>);
 );
 
 private testDatesOverlap() ==
 (
 	dcl d1: Date := new Date(1997,02,14,20,55); --- 1º
 	dcl d2: Date := new Date(1997,02,15,12,00); --- 2º
 	dcl d3: Date := new Date(1997,02,28,00,00); --- 3º
 	dcl d4: Date := new Date(1997,03,1,00,00);  --- 4º
 	
 	dcl b1:bool, b2:bool, b3:bool, b4:bool, b5:bool, b6:bool, b7:bool;
 	
 	b1 := Date`datesOverlap(d1,d4,d2,d3);	 	-- Situation:  ---s1---s2---e2---e1   : overlap
 	b2 := Date`datesOverlap(d1,d3,d2,d4);		-- Situation:  ---s1---s2---e1---e2   : overlap
 	b3 := Date`datesOverlap(d1,d2,d3,d4);		-- Situation:  ---s1---e1---s2---e2   : no
 	b4 := Date`datesOverlap(d1,d2,d2,d3);		-- Situation:  ---s1---e1s1---e2			: no
 	b5 := Date`datesOverlap(d2,d3,d1,d4);		-- Situation:  ---s2---s1---e1---e2   : overlap
 	b6 := Date`datesOverlap(d2,d4,d1,d3);		-- Situation:  ---s2---s1---e2---e1   : overlap
 	b7 := Date`datesOverlap(d1,d2,d1,d2);		-- Situation:  ---s1s2---e1e2					: overlap 	
 	
 	expecting(b1,true);
 	expecting(b2,true);
 	expecting(b3,false);
 	expecting(b4,false);
 	expecting(b5,true);
 	expecting(b6,true);
 	expecting(b7,true);
 );
 
 public static main() ==
 (
  dcl t: TestDate := new TestDate();
  t.testDatePosition();
	t.testDatesOverlap();
 );
 
end TestDate